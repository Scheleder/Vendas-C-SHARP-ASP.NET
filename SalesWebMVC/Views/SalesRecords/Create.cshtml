@model SalesWebMVC.Models.ViewModels.SalesRecordFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Register new Sale</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SalesRecord.Date" class="control-label"></label>
                <input asp-for="SalesRecord.Date" class="form-control" />
                <span asp-validation-for="SalesRecord.Date" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="SalesRecord.Seller" class="control-label"></label>
            <select asp-for="SalesRecord.Seller" asp-items="@(new SelectList(Model.Sellers,"Id", "Name"))" class="form-control"></select>
        </div>*@
            <div class="form-group">
                <label asp-for="SalesRecord.Seller" class="control-label"></label>
                <select asp-for="SalesRecord.SellerId" asp-items="@(new SelectList(ViewBag.Sellers, "Value", "Text"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Product" class="control-label"></label>
                <input asp-for="SalesRecord.Product" class="form-control" />
                <span asp-validation-for="SalesRecord.Product" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <input asp-for="SalesRecord.Amount" class="form-control" />
                <span asp-validation-for="SalesRecord.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Status" class="control-label"></label>
                <select asp-for="SalesRecord.Status" asp-items="@(new SelectList(ViewBag.Lista, "Value", "Text", "1"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Register Sale" class="btn btn-success" /> |
                <a asp-action="Index">Back to Search</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}